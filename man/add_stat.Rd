library(dplyr)
categorical_ci <- function(variable, tbl, ...) {
  filter(tbl$meta_data, variable == .env$variable) \%>\%
    purrr::pluck("df_stats", 1) \%>\%
    mutate(
      # calculate and format 95\% CI
      prop_ci = purrr::map2(n, N, ~prop.test(.x, .y)$conf.int \%>\% style_percent(symbol = TRUE)),
