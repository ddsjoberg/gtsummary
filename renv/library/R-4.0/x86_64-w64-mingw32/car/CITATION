citHeader("To cite the car package in publications use:")

citEntry(entry = "Book",
  title        = "An {R} Companion to Applied Regression",
  edition	   = "Third",
  author       = personList(as.person("John Fox"), as.person("Sanford Weisberg")),
  year         = "2019",
  publisher    = "Sage",
  address      = "Thousand Oaks {CA}",
  url          = "https://socialsciences.mcmaster.ca/jfox/Books/Companion/",

  textVersion  =
  paste("John Fox and Sanford Weisberg (2019).",
        "An {R} Companion to Applied Regression, Third Edition.",
        "Thousand Oaks CA: Sage.",
        "URL: https://socialsciences.mcmaster.ca/jfox/Books/Companion/")
)
